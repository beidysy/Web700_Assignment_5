<form method="post" action="/student/update">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName">First Name:</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="{{student.firstName}}">
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{student.lastName}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="{{student.email}}">
        </div>
        <div class="form-group col-md-6">
            <label for="addressStreet">Address (Street):</label>
            <input type="text" class="form-control" id="addressStreet" name="addressStreet" value="{{student.addressStreet}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="addressCity">Address (City):</label>
            <input type="text" class="form-control" id="addressCity" name="addressCity" value="{{student.addressCity}}">
        </div>
        <div class="form-group col-md-4">
            <label for="addressProvince">Address (Province):</label>
            <input type="text" class="form-control" id="addressProvince" name="addressProvince" value="{{student.addressProvince}}">
        </div>
        <div class="form-group col-md-4">
            <label for="status">Status:</label>
            <div>
                <input type="radio" id="statusFullTime" name="status" value="Full Time" {{#equal student.status 'Full Time'}}checked{{/equal}}>
                <label for="statusFullTime">Full Time</label>
                <input type="radio" id="statusPartTime" name="status" value="Part Time" {{#if (equal student.status 'Part Time')}}checked{{/if}}>
                <label for="statusPartTime">Part Time</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="course">Course:</label>
            <select class="form-control" id="course" name="course">
                {{#each courses}}
                <option value="{{this.id}}" {{#if (equal student.course this.id)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="ta">TA:</label>
            <input type="checkbox" id="ta" name="ta" {{#if student.ta}}checked{{/if}}>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update Student</button>
</form>
